<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnplaysingle"
        android:layout_width="260dp"
        android:layout_height="77dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:text="play single video"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnstanalone"
        android:layout_width="314dp"
        android:layout_height="79dp"
        android:layout_marginTop="44dp"
        android:text="standalone Sub menu"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/btnplaysingle"
        app:layout_constraintTop_toBottomOf="@+id/btnplaysingle" />
</androidx.constraintlayout.widget.ConstraintLayout>